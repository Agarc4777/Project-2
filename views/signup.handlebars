<div class="bigimg text-center">
    <div class="caption"><h3>Welcome to Get Fit!</h3></div> 
</div>
<div class="container-fluid">
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <h3>Sign Up</h3>
        <form class="signup">
            <div class="input-group mb-3">
                <input id="email-input" type="text" class="form-control" placeholder="Email" aria-label="Email"
                    name="signup-email" aria-describedby="basic-addon2">
            </div>
            <div class="input-group mb-3">
                <input id="password-input" type="text" class="form-control" placeholder="Password"
                    aria-label="Password" name="signup-password" aria-describedby="basic-addon2">
            </div>
            <div class="float-left">
                <button type="submit">Sign Up!</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h3>Log In</h3>
        <form class="login">
            <div class="input-group mb-3">
                <input id="emailLog-input" type="text" class="form-control" placeholder="Email" aria-label="Email"
                    name="login-email" aria-describedby="basic-addon2">
            </div>
            <div class="input-group mb-3">
                <input id="passwordLog-input" type="text" class="form-control" placeholder="Password"
                    aria-label="Password" name="login-password" aria-describedby="basic-addon2">
            </div>
            <div class="float-left">
                <button type="submit">Log In!</button>
            </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
